.choice-section {
  /* height: 33%; */
  margin-bottom: 10px;
}

.choice-section checkbox-group {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.choice-section .checkbox-item {
  position: relative;
  line-height: 100%;
  margin: 10px 0;
  display: flex;
  align-items: center;
  text-indent: 10rpx;
}

.choice-section .checkbox-item:nth-child(1){
  margin-top: 0;
}

.choice-section .checkbox-item:nth-last-child(1){
  margin-bottom: 0;
}

.choice-section .checkbox-solt {
  display: flex;
  width: 60%;
  align-items: center;
}

/*主容器*/
.checkbox-item .stepper {
  position: absolute;
  margin-right: 10px;
  right: 0;
  width: 92px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
}

/*加号和减号*/
.stepper text {
  width: 30px;
  line-height: 26px;
  text-align: center;
  float: left;
  font-weight: 600;
  font-family: 'Courier New', Courier, monospace;
}

/*数值*/
.stepper input {
  width: 30px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/
.stepper .normal {
  color: black;
}

/*禁用样式*/
.stepper .disabled {
  color: #ccc;
}

.QRcode-section {
  flex: 1;
  position: relative;
  overflow: unset !important;
}

.QRcode-section .QRcode-wrap {
  flex: 1;
  position: relative;
}

.QRcode-section .QRcode-wrap .prompt {
  position: absolute;
  bottom: 0;
  background-color: rgba(1, 1, 1, 0);
}

.QRcode-section .QRcode-wrap .QRcode {
  /* margin: 10px 0; */
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.QRcode-section .QRcode-wrap .QRcode view {
  padding-bottom: 40rpx;
  display: inline-block;
  margin-bottom: 60rpx;
  text-align: center;
  color: #aaa;
}

.QRcode-section .QRcode-wrap .QRcode canvas {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 260rpx;
  height: 260rpx;
  z-index: 9;
}

.QRcode-section .QRcode-wrap .button {
  color: #000;
  font-weight: normal !important;
  font-size: 18px;
  border: none;
  /* background-color: rgba(1, 1, 1, 0); */
}

.QRcode-section .QRcode-wrap .button label{
  display: flex;
  align-items: center;
}