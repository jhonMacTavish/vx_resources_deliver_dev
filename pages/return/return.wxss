.filling-section .travaler-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.travaler-list .travaler-item {
  margin: 15px 0;
  height: 50px;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.travaler-list .travaler-item:nth-child(1) {
  margin-top: 0;
}

.travaler-list .travaler-item:nth-last-child(1) {
  margin-bottom: 4rpx;
}

.travaler-item .item-wrap {
  max-width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.travaler-item .item-wrap .name {
  font-weight: bold;
  /* font-family:'Times New Roman', Times, serif; */
}

.travaler-item .item-wrap .name label {
  display: inline-block;
  text-indent: 10px;
}

.travaler-item .item-wrap .info {
  position: relative;
  top: 2px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 16px;
  color: #aaa;
  white-space: nowrap;
}

.travaler-item .item-wrap .info label {
  display: inline-block;
  text-indent: 10px;
}

.travaler-item .editor {
  flex: 1;
  /* margin-right: 10rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: lightpink; */
}

.travaler-item .editor label {
  position: relative;
  top: 3px;
  display: inline-block;
}

.travaler-list .tips {
  width: 100%;
  display: flex;
  justify-content: center;
  color: #aaa;
}

