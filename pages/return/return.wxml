<!--pages/return/return.wxml-->
<view class="container" style="padding-bottom: {{bottomPadding}}px;">
  <view class="filling-section card" style="{{!showButton && travalers.length ? (travalers.length == 1 ? 'height: 130px' : travalers.length == 2 ? 'height: 160px' : 'height: 216px') : 'height: 130px'}}">
    <view class="title">
      <label>乘机人信息</label>
      <label wx:if="{{userInfo}}" class="deregister" bindtap="deregister">
        <image src="../../images/deregister.png" alt="" />注销账号
      </label>
    </view>
    <view class="travaler-list">
      <scroll-view scroll-y style="max-height: 170px; overflow: hidden;">
        <view class="travaler-item" wx:for="{{travalers}}" wx:key="index">
          <view class="item-wrap">
            <view class="name"><label for="">{{item.name}}</label></view>
            <view class="info">
              <label for="">航班号: {{item.flightNo}}</label>
              <label for="" style="margin-right: 40px;">座位号: {{item.seatNo}}</label>
            </view>
          </view>
        </view>
        <view class="tips" wx:if="{{!travalers.length}}">
          <text>暂无乘机人信息</text>
        </view>
      </scroll-view>
    </view>
  </view>
  <view class="choice-section card" style="height: {{sectionHeight}}px;">
    <view class="title">待还物品</view>
    <checkbox-group>
      <view class="checkbox-item" wx:for="{{items}}" wx:key="value">
        <label class="checkbox-solt">
          <checkbox disabled="true" value="{{item.value}}" checked="{{item.checked}}" />
          <text>{{item.name}}</text>
          <text style="color: red; font-size: 12px;">{{index==0 || index==1?'该物品需归还':''}}</text>
        </label>
        <label class="stepper">
          <!-- 减号 -->
          <text class="{{minusStatus[index].disabled?'disabled':'normal'}}" data-index="{{index}}">-</text>
          <!-- 数值 -->
          <input disabled="{{true}}" type="number" bindchange="bindManual" value="{{item.num}}" />
          <!-- 加号 -->
          <text class="{{plusStatus[index].disabled?'disabled':'normal'}}" data-index="{{index}}">+</text>
        </label>
      </view>
    </checkbox-group>
  </view>
  <view class="QRcode-section card">
    <view class="title" style="height: 38px;margin: 0;">物品归还</view>
    <view class="QRcode-wrap">
      <view class="QRcode">
        <view wx:if="{{!orderId}}">
          <text>暂未领取物资</text>
        </view>
        <canvas wx:else="" canvas-id="myQrcode" />
        <!-- <canvas canvas-id="myQrcode" /> -->
      </view>
      <!-- <view class="button prompt">
        <label for="">
          <image style="margin-right: 10px; height: 25px;width: 25px;" src="{{prompt.imgSrc}}" mode="" />{{prompt.message}}
        </label>
      </view> -->
    </view>
  </view>
  <tabbar />
</view>