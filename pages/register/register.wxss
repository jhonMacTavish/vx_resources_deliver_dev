/**index.wxss**/
.logo-section{
  width: 100%;
  margin-bottom: 10px;
}

.logo-section .logo{
  display: inline-block;
  width: 100%;
  height: 150px;
}

.register-section{
  padding-top: 100rpx;
  flex: 1;
  font-size: 38rpx;
}

.register-section .input-item {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 1px rgba(0, 0, 0, 0.1);
}

.register-section .input-item:nth-last-child(3){
  border-bottom: none;
}

.register-section .input-item label {
  display: inline-block;
  width: 200rpx;
  text-indent: 10px;
  text-align: left;
}

.register-section .input-item input {
  height: 48rpx;
  flex: 1;
  text-align: left;
  font-size: 36rpx;
}

.register-section .input-item .captchaBtn{
  margin: 0;
  width: 100px;
  font-size: 17px;
  font-family:Arial, Helvetica, sans-serif;
}

.register-section .agreement-check {
  margin: 20rpx 0 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #333;
}

.register-section .link {
  color: #1E90FF;
  margin: 0 5rpx;
}

.register-section .button{
  margin-top: 60rpx;
}


