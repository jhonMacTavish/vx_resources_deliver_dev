/**app.wxss**/
page {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #F6F6F6;
}

.container {
  position: relative;
  box-sizing: border-box;
  margin: 10px;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: hidden;
  font-size: 34rpx;
  letter-spacing: 1px;
  font-family:‘Gill Sans’, ‘Gill Sans MT’, Calibri, ‘Trebuchet MS’, sans-serif;
}

.card {
  box-sizing: border-box;
  padding: 10px;
  display: flex;
  flex-direction: column;
  border-radius: 15rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  background-color: white;
  transition: height 1s ease;
  overflow: hidden;
}

.title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  height: 26px;
  line-height: 26px;
  font-size: 34rpx;
  font-weight: bold;
}

.button {
  box-sizing: border-box;
  width: 100%;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold !important;
  border-radius: 16rpx;
  background-color: #1890ff;
  border: 1px solid rgba(1, 1, 1, 0.1);
}